{
  "name": "sr",
  "publisher": "fang",
  "displayName": "sr",
  "description": "超级替换",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sr.addRule",
        "title": "添加规则"
      }
    ],
    "keybindings": [
      {
        "command": "sr.addRule",
        "key": "alt+x"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sr",
          "title": "超级替换",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "sr": [
        {
          "type": "webview",
          "id": "sr.sidebar",
          "icon": "assets/icon.svg",
          "name": "设置面板"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
